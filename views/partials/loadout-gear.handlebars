<div class="accordion accordian-fl" id="accordionExample">
  <div class="accordion-item" data-id={{id}}>
    <h2 class="accordion-header" id={{id}}>
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{id}}" aria-expanded="false" aria-controls="collapse{{id}}">
        {{product_name}} ({{general_name}}) <strong class="">[{{weight_oz}} oz]</strong> 
      </button>
    </h2>
    <div id="collapse{{id}}" class="accordion-collapse collapse" aria-labelledby="heading{{id}}" data-bs-parent="#accordionExample">
      <div class="accordion-body pt-.5">
        <div class="description my-2">
          <p class='py-1'>{{description}}</p>
          <p class= 'py-1 text-success'><em>${{price}}</em></p>
        </div>
        <button class="removebtn mybtn d-block mx-auto" data-id={{id}}>Remove</button>
      </div>
    </div>
  </div>
</div>